<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title || 'Document' %>
    </title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/user/lab-reports.css">
    <link rel="stylesheet" href="/css/user/custom.css">
</head>
<body>
    <%- include('components/navbar.ejs') %>
    <div class="container">
        <h1><%=title%></h1>
    <%if(reports) { %>
        <div class="report-list">
            <h2 style="color: #1e88e5; font-size: 1.3rem; margin-bottom: 10px;">Reports</h2>
            <% labreports.reports.forEach((report, index) => { %>
                <div class="report-item">
                    <a href="/labReport/<%= labreports._id %>/<%= index + 1 %>" target="'_blank">
                    <span><span class="icon">ðŸ“„</span><%= report.filename %></span>
                    </a>
                </div>
                <% }); %>
        </div>
    <% } else { %>
        <div class="no-report">
            <p>No lab reports available at the moment.</p>
        </div>
    <% } %>

    </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</html>
